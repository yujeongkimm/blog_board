<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.blog_board.mapper.BoardMapper">
    <select id="boardCount" resultType="int">
        SELECT count(boardId) AS cnt FROM tbl_board;
    </select>

    <select id="getList" resultType="com.example.blog_board.domain.Board">
        SELECT
        *
        FROM tbl_board;
    </select>

    <select id="getBoard" parameterType="Long" resultType="com.example.blog_board.domain.Board">
        SELECT
        *
        FROM tbl_board where boardId=#{boardId};
    </select>

    <insert id="uploadBoard" parameterType="com.example.blog_board.domain.Board">
        INSERT INTO tbl_board (title,content,name)
        VALUES
        (#{title}, #{content}, #{name});
    </insert>

    <update id="updateBoard" parameterType="com.example.blog_board.domain.Board">
        UPDATE tbl_board
        SET title = #{title}, content=#{content}
        WHERE boardId=#{boardId};
    </update>

    <delete id="deleteBoard" parameterType="Long">
        DELETE
        FROM tbl_board
        WHERE boardId=#{boardId};
    </delete>
</mapper>